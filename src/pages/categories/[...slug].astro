---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PostList from '@/components/blog/PostList.astro';
import Breadcrumb from '@/components/common/Breadcrumb.astro';
import Pagination from '@/components/common/Pagination.astro';
import Sidebar from '@/components/common/Sidebar.astro';
import { getAllCategories, getPostsByCategory, paginatePosts } from '@/lib/content';
import { PER_PAGE } from '@/lib/constants';
import { url } from '@/lib/utils';

export async function getStaticPaths() {
  const categories = await getAllCategories();
  const paths = [];

  for (const cat of categories) {
    const posts = await getPostsByCategory(cat.slug);
    const totalPages = Math.max(1, Math.ceil(posts.length / PER_PAGE));

    // Page 1: /categories/dev-tools
    paths.push({
      params: { slug: cat.slug },
      props: { category: cat, currentPage: 1 },
    });

    // Page 2+: /categories/dev-tools/page/2
    for (let page = 2; page <= totalPages; page++) {
      paths.push({
        params: { slug: `${cat.slug}/page/${page}` },
        props: { category: cat, currentPage: page },
      });
    }
  }

  return paths;
}

const { category, currentPage } = Astro.props;
const allPosts = await getPostsByCategory(category.slug);
const { posts, totalPages } = paginatePosts(allPosts, currentPage);
---

<BaseLayout title={`${category.name}の記事一覧`} description={`${category.name}に関する記事一覧`}>
  <div class="mx-auto max-w-6xl px-4 py-8">
    <div class="lg:flex lg:gap-8">
      <div class="min-w-0 flex-1">
        <Breadcrumb
          items={[
            { label: 'カテゴリ一覧', href: '/categories' },
            { label: category.name },
          ]}
        />
        <h1 class="mb-8 text-3xl font-bold text-(--color-text-primary)">{category.name}</h1>
        <PostList posts={posts} />
        <Pagination currentPage={currentPage} totalPages={totalPages} basePath={url(`/categories/${category.slug}`)} />
      </div>
      <div class="hidden lg:block lg:w-80 lg:shrink-0">
        <div class="sticky top-20">
          <Sidebar />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
