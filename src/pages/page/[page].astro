---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PostList from '@/components/blog/PostList.astro';
import Pagination from '@/components/common/Pagination.astro';
import Sidebar from '@/components/common/Sidebar.astro';
import JsonLd from '@/components/seo/JsonLd.astro';
import { getAllPosts, paginatePosts } from '@/lib/content';
import { PER_PAGE } from '@/lib/constants';
import { url } from '@/lib/utils';

export async function getStaticPaths() {
  const posts = await getAllPosts();
  const totalPages = Math.max(1, Math.ceil(posts.length / PER_PAGE));

  return Array.from({ length: totalPages - 1 }, (_, i) => ({
    params: { page: String(i + 2) },
  }));
}

const currentPage = Number(Astro.params.page);
const allPosts = await getAllPosts();
const { posts, totalPages } = paginatePosts(allPosts, currentPage);
---

<BaseLayout title={`最新の記事 - ページ ${currentPage}`}>
  <JsonLd type="website" />
  <div class="mx-auto max-w-6xl px-4 py-8">
    <div class="lg:flex lg:gap-8">
      <div class="min-w-0 flex-1">
        <h1 class="mb-8 text-3xl font-bold text-(--color-text-primary)">最新の記事</h1>
        <PostList posts={posts} />
        <Pagination currentPage={currentPage} totalPages={totalPages} basePath={url('')} />
      </div>
      <div class="hidden lg:block lg:w-80 lg:shrink-0">
        <div class="sticky top-20">
          <Sidebar />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
