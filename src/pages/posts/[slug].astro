---
import { render } from 'astro:content';
import PostLayout from '@/layouts/PostLayout.astro';
import { getAllPosts, getSeriesNavigation } from '@/lib/content';

export async function getStaticPaths() {
  const posts = await getAllPosts();
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;

const allPosts = await getAllPosts();
const relatedPosts = allPosts
  .filter((p) => p.id !== post.id && p.data.categorySlug === post.data.categorySlug)
  .slice(0, 3);

const seriesNav = await getSeriesNavigation(post);

const { Content, headings } = await render(post);
---

<PostLayout post={post} relatedPosts={relatedPosts} seriesNav={seriesNav} headings={headings}>
  <Content />
</PostLayout>
