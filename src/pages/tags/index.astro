---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumb from '@/components/common/Breadcrumb.astro';
import { url } from '@/lib/utils';
import { getAllTags, getPostsByTag } from '@/lib/content';

const tags = await getAllTags();
const tagsWithCount = await Promise.all(
  tags.map(async (tag) => {
    const posts = await getPostsByTag(tag.slug);
    return { ...tag, count: posts.length };
  })
);
---

<BaseLayout title="タグ一覧" description="タグ一覧ページ">
  <div class="mx-auto max-w-6xl px-4 py-8">
    <Breadcrumb items={[{ label: 'タグ一覧' }]} />
    <h1 class="mb-8 text-3xl font-bold text-(--color-text-primary)">タグ一覧</h1>
    <div class="flex flex-wrap gap-3">
      {tagsWithCount.map((tag) => (
        <a
          href={url(`/tags/${tag.slug}`)}
          class="inline-flex items-center gap-2 rounded-full border border-(--color-border) bg-(--color-bg-primary) px-4 py-2 text-sm font-medium text-(--color-text-secondary) transition-colors hover:border-zinc-400 hover:text-zinc-900 dark:hover:border-zinc-600 dark:hover:text-zinc-100"
        >
          <span>#{tag.name}</span>
          <span class="rounded-full bg-(--color-bg-tertiary) px-2 py-0.5 text-xs text-(--color-text-tertiary)">
            {tag.count}
          </span>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
