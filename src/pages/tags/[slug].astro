---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PostList from '@/components/blog/PostList.astro';
import Breadcrumb from '@/components/common/Breadcrumb.astro';
import Sidebar from '@/components/common/Sidebar.astro';
import { getAllTags, getPostsByTag } from '@/lib/content';

export async function getStaticPaths() {
  const tags = await getAllTags();
  return tags.map((tag) => ({
    params: { slug: tag.slug },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const posts = await getPostsByTag(tag.slug);
---

<BaseLayout title={`#${tag.name}の記事一覧`} description={`${tag.name}タグの記事一覧`}>
  <div class="mx-auto max-w-6xl px-4 py-8">
    <div class="lg:flex lg:gap-8">
      <div class="min-w-0 flex-1">
        <Breadcrumb
          items={[
            { label: 'タグ一覧', href: '/tags' },
            { label: `#${tag.name}` },
          ]}
        />
        <h1 class="mb-8 text-3xl font-bold text-(--color-text-primary)">#{tag.name}</h1>
        <PostList posts={posts} />
      </div>
      <div class="hidden lg:block lg:w-80 lg:shrink-0">
        <div class="sticky top-20">
          <Sidebar />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
