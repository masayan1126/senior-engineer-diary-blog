---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PostList from '@/components/blog/PostList.astro';
import Breadcrumb from '@/components/common/Breadcrumb.astro';
import Pagination from '@/components/common/Pagination.astro';
import Sidebar from '@/components/common/Sidebar.astro';
import { getAllTags, getPostsByTag, paginatePosts } from '@/lib/content';
import { PER_PAGE } from '@/lib/constants';
import { url } from '@/lib/utils';

export async function getStaticPaths() {
  const tags = await getAllTags();
  const paths = [];

  for (const tag of tags) {
    const posts = await getPostsByTag(tag.slug);
    const totalPages = Math.max(1, Math.ceil(posts.length / PER_PAGE));

    // Page 1: /tags/astro
    paths.push({
      params: { slug: tag.slug },
      props: { tag, currentPage: 1 },
    });

    // Page 2+: /tags/astro/page/2
    for (let page = 2; page <= totalPages; page++) {
      paths.push({
        params: { slug: `${tag.slug}/page/${page}` },
        props: { tag, currentPage: page },
      });
    }
  }

  return paths;
}

const { tag, currentPage } = Astro.props;
const allPosts = await getPostsByTag(tag.slug);
const { posts, totalPages } = paginatePosts(allPosts, currentPage);
---

<BaseLayout title={`#${tag.name}の記事一覧`} description={`${tag.name}タグの記事一覧`}>
  <div class="mx-auto max-w-6xl px-4 py-8">
    <div class="lg:flex lg:gap-8">
      <div class="min-w-0 flex-1">
        <Breadcrumb
          items={[
            { label: 'タグ一覧', href: '/tags' },
            { label: `#${tag.name}` },
          ]}
        />
        <h1 class="mb-8 text-3xl font-bold text-(--color-text-primary)">#{tag.name}</h1>
        <PostList posts={posts} />
        <Pagination currentPage={currentPage} totalPages={totalPages} basePath={url(`/tags/${tag.slug}`)} />
      </div>
      <div class="hidden lg:block lg:w-80 lg:shrink-0">
        <div class="sticky top-20">
          <Sidebar />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
