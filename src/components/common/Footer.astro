---
import { SITE } from '@/lib/constants';
import { url } from '@/lib/utils';
---

<footer class="border-t border-(--color-border) bg-(--color-bg-secondary) pb-20 md:pb-0">
  <div class="mx-auto max-w-6xl px-4 py-8">
    <div class="flex flex-col items-center gap-4 sm:flex-row sm:justify-between">
      <p class="text-sm text-(--color-text-tertiary)">
        &copy; {new Date().getFullYear()} {SITE.title}. All rights reserved.
      </p>
      <nav class="flex gap-4">
        <a href={url('/about')} class="text-sm text-(--color-text-secondary) hover:text-(--color-text-primary) transition-colors">
          About
        </a>
        <a href={url('/privacy')} class="text-sm text-(--color-text-secondary) hover:text-(--color-text-primary) transition-colors">
          プライバシーポリシー
        </a>
        <a href={url('/rss.xml')} class="text-sm text-(--color-text-secondary) hover:text-(--color-text-primary) transition-colors">
          RSS
        </a>
      </nav>
    </div>
  </div>
</footer>
