---
import { formatDate, url } from '@/lib/utils';
import CategoryBadge from './CategoryBadge.astro';
import type { PostEntry } from '@/lib/content';

interface Props {
  post: PostEntry;
}

const { post } = Astro.props;
const date = post.data.publishedAt;
---

<article class="group rounded-xl border border-(--color-border) bg-(--color-bg-primary) overflow-hidden transition-shadow hover:shadow-lg">
  <a href={url(`/posts/${post.id}`)} class="block">
    {post.data.coverImage ? (
      <div class="aspect-video overflow-hidden">
        <img
          src={post.data.coverImage}
          alt={post.data.title}
          class="h-full w-full object-cover transition-transform group-hover:scale-105"
          loading="lazy"
          decoding="async"
          transition:name={`post-image-${post.id}`}
        />
      </div>
    ) : (
      <div class="aspect-video bg-zinc-900 dark:bg-zinc-800 flex items-center justify-center" transition:name={`post-image-${post.id}`}>
        <span class="text-5xl">{post.data.emoji || 'üìù'}</span>
      </div>
    )}
  </a>
  <div class="p-5">
    <div class="mb-2 flex items-center gap-2">
      <CategoryBadge name={post.data.category} slug={post.data.categorySlug} />
      <time datetime={date.toISOString()} class="text-xs text-(--color-text-tertiary)">
        {formatDate(date)}
      </time>
    </div>
    <a href={url(`/posts/${post.id}`)} class="block">
      <h2 class="mb-2 text-lg font-bold leading-snug text-(--color-text-primary) group-hover:text-zinc-900 dark:group-hover:text-zinc-100 transition-colors line-clamp-2" transition:name={`post-title-${post.id}`}>
        {post.data.title}
      </h2>
    </a>
    {post.data.excerpt && (
      <p class="text-sm text-(--color-text-secondary) line-clamp-2">{post.data.excerpt}</p>
    )}
  </div>
</article>
